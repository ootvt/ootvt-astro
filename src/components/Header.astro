---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeSwitch from './ThemeSwitch.astro';
---

<header>
    <ThemeSwitch />
	<div class="header-content">
		<h1 class="site-title">{SITE_TITLE}</h1>
		
		<nav>
			<HeaderLink href="/" class="nav-button">文章</HeaderLink>
			<HeaderLink href="/blog" class="nav-button">归档</HeaderLink>
			<HeaderLink href="/categories" class="nav-button">分类</HeaderLink>
			<HeaderLink href="/about" class="nav-button">关于</HeaderLink>
		</nav>
	</div>
</header>

<style>
	header {
		padding: 4rem 1rem 2rem;
		text-align: center;
		background: transparent;
		box-shadow: none;
	}

	.header-content {
		max-width: 672px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2.5rem;
	}

	.site-title {
		font-family: 'Alfa Slab One', cursive;
		font-size: 2.5rem;
		font-weight: 400;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: var(--main-color);
		margin: 0;
	}

	nav {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center;
		width: 100%;
		max-width: 640px;
	}

	.nav-button {
		font-family: 'Noto Serif SC', 'SimSun', serif;
		font-weight: 500;
		transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
		
        /* [修改] 使用 CSS 变量，这样暗黑模式下会自动变色 */
		background-color: var(--bg-color); 
		color: var(--main-color);
		
        cursor: pointer;
		border: 4px solid var(--main-color);
		font-size: 0.75rem;
		padding: 0.25rem 2rem;
		letter-spacing: 0.1em;
		text-decoration: none;
		display: inline-block;
	}

	.nav-button:hover,
	.nav-button.active { 
		transform: translate(-3px, -3px);
		box-shadow: 3px 3px 0px 0px var(--main-color);
	}

	.nav-button:active {
		transform: translate(0, 0);
		box-shadow: 0 0 0 0 transparent;
        /* [修改] active 状态也可以稍微加深一点背景，或者保持透明 */
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		header {
			padding: 2rem 1rem 1rem;
		}

		.site-title {
			font-size: 1.75rem;
		}

		.header-content {
			gap: 1.5rem;
		}
	}
</style>