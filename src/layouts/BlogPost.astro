---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

import '../styles/global.css';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags } = Astro.props;
---

<html lang="zh-CN">
	<head>
		<BaseHead title={title} description={description} />
		<link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Noto+Serif+SC:wght@300;400;500;700&display=swap" rel="stylesheet">
		<style>
			main {
				width: 100%;
				max-width: 672px;
				margin: 0 auto;
				padding: 0 1rem 3rem;
			}

			.article-header {
				margin-bottom: 2rem;
			}

			.title-wrapper {
				position: relative;
				display: inline-block;
				cursor: default;
				padding-right: 1.25rem;
				margin-bottom: 1rem;
			}

			.title-bg {
				position: absolute;
				left: 0;
				top: 0;
				height: 100%;
				width: 4px;
				background-color: var(--main-color);
				z-index: -1;
			}

			.article-title {
				font-size: 1.5rem;
				font-weight: bold;
				color: var(--main-color);
				padding-left: 1rem;
				margin: 0;
			}

			.article-meta {
				display: flex;
				align-items: baseline;
				gap: 0.75rem;
				flex-wrap: wrap;
				padding-left: 1rem;
			}

			.article-date {
				color: var(--main-color);
				opacity: 0.6;
				font-size: 0.75rem;
			}

			.article-category {
				color: var(--main-color);
				opacity: 0.6;
				font-size: 0.75rem;
				text-decoration: underline;
				text-decoration-color: #9ca3af;
                transition: color 0.2s ease, opacity 0.2s ease;
			}
            
            .article-category:hover {
				opacity: 1;
				color: #000;
			}

			.hero-image {
				margin-bottom: 2rem;
			}

			.hero-image img {
				width: 100%;
				height: auto;
				border-radius: 8px;
			}

			.article-content {
				background-color: var(--box-bg);
				padding: 1.5rem;
				border: 1px solid transparent;
				line-height: 1.7;
			}

            /* [修复] 移除正文中第一个元素的上边距，防止顶部空隙过大 */
            .article-content > :global(*:first-child) {
                margin-top: 0 !important;
            }

            /* [修复] 移除正文中最后一个元素的下边距，解决底部边距过大的问题 */
            .article-content > :global(*:last-child) {
                margin-bottom: 0 !important;
            }

			.article-content :global(p) {
				margin-bottom: 1.5em;
				text-align: justify;
			}

			.article-content :global(h2) {
				margin-top: 2em;
				margin-bottom: 1em;
			}

			.article-content :global(h3) {
				margin-top: 1.5em;
				margin-bottom: 0.75em;
			}

			.article-content :global(ul),
			.article-content :global(ol) {
				margin: 1em 0;
				padding-left: 2em;
			}

			.article-content :global(li) {
				margin-bottom: 0.5em;
			}

			.article-content :global(a) {
				color: var(--main-color);
				text-decoration: underline;
			}

			.article-content :global(a:hover) {
				color: #000;
			}

			.article-content :global(blockquote) {
				border-left: 4px solid var(--main-color);
				padding-left: 1rem;
				margin: 1.5em 0;
				font-style: italic;
			}

			.last-updated {
				font-style: italic;
				opacity: 0.7;
			}

			@media (max-width: 768px) {
				.article-title {
					font-size: 1.25rem;
				}

				.article-content {
					padding: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<header class="article-header">
					<div class="title-wrapper">
						<div class="title-bg"></div>
						<h1 class="article-title">{title}</h1>
					</div>
					<div class="article-meta">
						<span class="article-date">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<span class="last-updated">
									(更新于 <FormattedDate date={updatedDate} />)
								</span>
							)}
						</span>
						
						{tags && tags.map((tag) => (
							<a href={`/tags/${tag}/`} class="article-category">#{tag}</a>
						))}

					</div>
				</header>

				{heroImage && (
					<div class="hero-image">
						<Image width={720} height={360} src={heroImage} alt="" />
					</div>
				)}

				<div class="article-content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>